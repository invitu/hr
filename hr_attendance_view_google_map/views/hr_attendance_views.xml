<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_attendance_map" model="ir.ui.view">
        <field name="name">view.hr.attendance.map</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <map class="o_hr_attendance_map" library="geometry" string="Map" lat="check_in_latitude" lng="check_in_longitude">
                <field name="id"/>
                <field name="check_in_latitude"/>
                <field name="check_in_longitude"/>
                <field name="employee_id"/>
                <field name="check_in"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_hr_attendance_kanban">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title oe_partner_heading">
                                </strong>
                                <ul>
                                    <li t-if="record.employee_id.raw_value">
                                        <field name="employee_id"/>
                                    </li>
                                    <li t-if="record.check_in.raw_value" class="o_text_overflow">
                                        <field name="check_in"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </map>
        </field>
    </record>
    <record id="hr_attendance.hr_attendance_action" model="ir.actions.act_window">
        <field name="view_mode">tree,kanban,form,map</field>
    </record>
</odoo>
